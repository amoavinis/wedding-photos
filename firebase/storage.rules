rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Function to verify both auth and App Check
    function isRequestValid() {
      return request.auth != null 
          && request.auth.token.firebase.sign_in_provider == 'anonymous'
          && request.app != null;
    }

    // Media folder rules (matches your Firestore pattern)
    match /media/{allPaths=**} {
      allow read: if isRequestValid();
      allow write: if isRequestValid();
    }
  }
}