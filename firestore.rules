rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /media/{docId} {
      // Allow public read access
      allow read: if true;
      
      // Only allow writes if authenticated (adjust as needed)
      allow write: if request.auth != null;
      
      // Alternatively, if you want to allow public writes (not recommended for production)
      // allow write: if true;
    }
  }
}